<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="1000dp">
    <include layout="@layout/bar_tou"
        />
    <!--教学进度-->
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/list_failure_tab">
            <TextView
                style="@style/list_failure_tab_left"
                android:text="主讲教师："/>
            <TextView
                android:id="@+id/failure_jiweih"
                style="@style/list_failure_tab_right"
                android:text="刘艳青"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>

        <LinearLayout
            style="@style/list_failure_tab">
            <TextView
                style="@style/list_failure_tab_left"
                android:text="职称: "/>
            <TextView
                android:id="@+id/failure_jixin"
                style="@style/list_failure_tab_right"
                android:text="副教授"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_width="30dp"
            style="@style/jxrl_textview"
            android:text=" 周次 "/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="30dp"
            style="@style/jxrl_textview"
            android:text=" 时数 "/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="40dp"
            style="@style/jxrl_textview"
            android:text="章节"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="90dp"
            style="@style/jxrl_textview"
            android:text="主要内容"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>
        <TextView
            android:layout_width="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/jxrl_textview"
            android:text="目的与要求"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>
        <TextView
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/jxrl_textview"
            android:text="教学方式"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>
        <TextView
            android:layout_width="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/jxrl_textview"
            android:text="作业(时数)"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/jxrl_textview"
            android:text="备注"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>
    </LinearLayout>



</LinearLayout>