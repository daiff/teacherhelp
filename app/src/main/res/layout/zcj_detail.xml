<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/bar_title"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <TextView
                android:id="@+id/course"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="数据结构(120333333)"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/year_semester"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="2017―2081学年度第一学期"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/classs"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="2017―2081学年度第一学期"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/xibie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="授课教师"
                        android:textColor="@color/white"
                        android:textSize="11dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/failure_peoploname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="网络工程"
                            android:textColor="@color/white"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/zhuanye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学分"
                        android:textColor="@color/white"
                        android:textSize="11dp"/>
                    <TextView
                        android:id="@+id/major"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="网络工程"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/banji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开课学院"
                        android:textColor="@color/white"
                        android:textSize="11dp"/>
                    <TextView
                        android:id="@+id/grade_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2014级1班"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout></LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_width="90dp"
            style="@style/jxrl_textview"
            android:text="学号"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>
        <TextView
            android:gravity="center"
            android:layout_width="58dp"
            style="@style/jxrl_textview"
            android:text="姓名"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/jxrl_textview"
            android:text="实验成绩"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/jxrl_textview"
            android:text="平时成绩"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/jxrl_textview"
            android:text="期末成绩"
            android:id="@+id/textView3" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/jxrl_textview"
            android:text="总评成绩"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background"/>

    <ListView
        android:id="@+id/listt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>



</LinearLayout>