<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/program_top"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/list_failure_tab">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学分："/>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/jxdg_credit"
                style="@style/list_failure_tab_right"
                android:text=""/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>

        <LinearLayout
            style="@style/list_failure_tab">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学时: "/>
            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:id="@+id/Hours"
                style="@style/list_failure_tab_right"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/View_hen"/>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/list_failure_tab">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="面向对象："/>
            <EditText
                android:id="@+id/Object_oriented"
                android:gravity="end"
                android:layout_width="match_parent"
                android:background="@null"
                style="@style/list_failure_tab_right"
                android:text=""/>
        </LinearLayout>
        </LinearLayout>
    <View
        style="@style/View_hen"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/list_failure_tab">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="适用专业："/>
            <EditText
                android:id="@+id/major"
                android:gravity="end"
                android:layout_width="match_parent"
                android:background="@null"
                style="@style/list_failure_tab_right"
                android:text=""/>
        </LinearLayout>
        </LinearLayout>

    <View
        style="@style/View_hen"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/list_failure_tab">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程英文名称："/>
            <EditText
                android:id="@+id/englishname"
                android:gravity="end"
                android:layout_width="match_parent"
                android:background="@null"
                style="@style/list_failure_tab_right"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/object"
        android:layout_marginTop="12dp"
        style="@style/commen_textview_linerlayout">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/item_left"/>
        <TextView
            style="@style/jxdg_textview"
            android:text="课程的任务和目的"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/detail"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/xueshianpai"
        android:layout_marginTop="1dp"
        style="@style/commen_textview_linerlayout">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/item_left"/>
        <TextView
            style="@style/jxdg_textview"
            android:text="学时安排"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/detail"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/jxnryyq"
        android:layout_marginTop="1dp"
        style="@style/commen_textview_linerlayout">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/item_left"/>
        <TextView
            style="@style/jxdg_textview"
            android:text="课程教学内容与要求"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/detail"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ability"
        android:layout_marginTop="1dp"
        style="@style/commen_textview_linerlayout">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/item_left"/>
        <TextView
            style="@style/jxdg_textview"
            android:text="对学生能力培养的要求"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/detail"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact"
        android:layout_marginTop="1dp"
        style="@style/commen_textview_linerlayout">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/item_left"/>
        <TextView
            style="@style/jxdg_textview"
            android:text="各课程的联系"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/detail"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/check"
        android:layout_marginTop="1dp"
        style="@style/commen_textview_linerlayout">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/item_left"/>
        <TextView
            style="@style/jxdg_textview"
            android:text="考核方式"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/detail"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/book"
        android:layout_marginTop="1dp"
        style="@style/commen_textview_linerlayout">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/item_left"/>
        <TextView
            style="@style/jxdg_textview"
            android:text="教材与参考书"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/detail"/>
    </LinearLayout>





</LinearLayout>